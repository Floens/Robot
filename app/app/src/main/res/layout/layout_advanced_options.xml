<?xml version="1.0" encoding="utf-8"?>
<com.itopia.rowcontroller.ui.layout.AdvancedOptionsLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toggle_autoscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/toggle_autoscan" />

    </LinearLayout>

    <EditText
        android:id="@+id/command_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/send_command_hint"
        android:lines="2" />

    <Button
        android:id="@+id/command_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/send_command" />

</com.itopia.rowcontroller.ui.layout.AdvancedOptionsLayout>
